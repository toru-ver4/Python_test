<MyWidget>:
    GridLayout:
        size: root.size
        cols:1
        Label:
            size_hint_y: None
            height: root.height * 0.1
            text: 'tiwter illust viewer'
        ScrollView:
            size_hint: 1, None
            size: root.width, root.height * 0.8
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                cols:1
                size_hint: 1, None
                Button:
                    size_hint_y: None
                    height: root.height * 0.2
                    text: 'aaa'
                Button:
                    size_hint_y: None
                    height: root.height * 0.2
                    text: 'bbb'
                Button:
                    size_hint_y: None
                    height: root.height * 0.2
                    text: 'ccc'
                Button:
                    size_hint_y: None
                    height: root.height * 0.2
                    text: 'ddd'
                Button:
                    size_hint_y: None
                    height: root.height * 0.2
                    text: 'eee'
                Button:
                    size_hint_y: None
                    height: root.height * 0.2
                    text: 'fff'
                Button:
                    size_hint_y: None
                    height: root.height * 0.2
                    text: 'ggg'
        BoxLayout:
            size_hint_y: None
            height: root.height * 0.1
            orientation: 'horizontal'
            padding: 0
            Button:
                text: 'get'
            Button:
                text: 'clear'
                on_release: app.clear_picture()
                
            Button:
                text: 'close'
                on_release: app.close_callback()