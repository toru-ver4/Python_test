<MyWidget>:
    GridLayout:
        id: root_layout
        size: root.size
        cols:1
        TextInput:
            id: id_text_box
            font_size: self.height /2
            text: 'please type twitter id'
        ScrollView:
            id: scroll
            size_hint: 1, None
            size: root.width, root.height * 0.85
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: illust_area
                cols:2
                size_hint: 1, None
                height: self.minimum_height
                canvas.before:
                    Color:
                        rgb: 0.9, 0.9, 0.9
                    Rectangle:
                        pos: self.pos
                        size: self.size
        BoxLayout:
            size_hint_y: None
            height: root.height * 0.075
            orientation: 'horizontal'
            padding: 0
            MyCtrlButton:
                text: 'get'
                on_release: root.paste_twitter_illust()
            MyCtrlButton:
                text: 'clear'
                on_release: root.clear_picture()
            MyCtrlButton:
                text: 'close'
                on_release: app.close_callback()
            MyCtrlButton:
                text: 'sm change'
                on_release:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'img_view'

<ImgViewScreen>:
    Button:
        text: 'This is the new world!'
        on_release:
            root.manager.transition.direction = 'left'
            root.manager.current = 'main'
            

<MyCtrlButton@Button>
    font_size: self.height / 3