<MyWidget>:
    GridLayout:
        id: root_layout
        size: root.size
        cols:1
        Label:
            size_hint_y: None
            height: root.height * 0.075
            text: 'tiwter illust viewer'
        ScrollView:
            id: scroll
            size_hint: 1, None
            size: root.width, root.height * 0.85
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: illust_area
                cols:2
                size_hint: 1, None
                height: self.minimum_height
        BoxLayout:
            size_hint_y: None
            height: root.height * 0.075
            orientation: 'horizontal'
            padding: 0
            Button:
                text: 'get'
                on_release: root.add_picture()
            Button:
                text: 'clear'
                on_release: root.clear_picture()
                
            Button:
                text: 'close'
                on_release: app.close_callback()