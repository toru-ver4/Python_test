<MyWidget>:
    GridLayout:
        id: root_layout
        size: root.size
        cols:1
        Label:
            color: 0, 0, 0, 1
            font_size: self.height / 3
            size_hint_y: None
            height: root.height * 0.075
            text: 'tiwter illust viewer'
            canvas.before:
                Color:
                    rgb: 0.5, 0.5, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
        ScrollView:
            id: scroll
            size_hint: 1, None
            size: root.width, root.height * 0.85
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: illust_area
                cols:2
                size_hint: 1, None
                height: self.minimum_height
                canvas:
                    Color:
                        rgb: 0.9, 0.9, 0.9
                    Rectangle:
                        pos: self.pos
                        size: self.size
        BoxLayout:
            size_hint_y: None
            height: root.height * 0.075
            orientation: 'horizontal'
            padding: 0
            MyCtrlButton:
                text: 'get'
                on_release: root.add_picture()
            MyCtrlButton:
                text: 'clear'
                on_release: root.clear_picture()
            MyCtrlButton:
                text: 'close'
                on_release: app.close_callback()


<MyCtrlButton@Button>
    font_size: self.height / 3